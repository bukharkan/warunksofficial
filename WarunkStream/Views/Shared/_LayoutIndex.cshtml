<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,400italic'>
    <link rel="stylesheet" type="text/css" href="~/content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/content/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/content/css/style.css">

    <title>@ViewBag.Title - Warunk Stream</title>
</head>

<body>
    <div class="main-body">
        <div class="container">
            <div class="row">
                <div class="main-page">
                    <aside class="main-navigation">
                        <div class="main-menu">
                            <div class="menu-container">
                                <div class="block-keep-ratio block-keep-ratio-2-1 block-width-full home">
                                    <a href="@Url.Action("Index","Home")" class="block-keep-ratio__content  main-menu-link ">
                                        <span class="main-menu-link-text">
                                            <i class="fa fa-qrcode  fa-4x main-menu-link-icon"></i>
                                            TOURNAMENT
                                        </span>
                                    </a>
                                </div>
                            </div>

                            <div class="menu-container">
                                <div class="block-keep-ratio  block-keep-ratio-1-1  block-width-half  pull-left  about-main">
                                    <a href="#" class="main-menu-link contact block-keep-ratio__content flexbox-center">
                                        <i class="fa fa-ticket fa-4x main-menu-link-icon"></i>
                                        CERTIFICATE
                                    </a>
                                </div>

                                <div class="block-keep-ratio  block-keep-ratio-1-1  block-width-half  pull-right  contact-main">
                                    <a href="mailto:info@warunksofficial.com" class="main-menu-link contact block-keep-ratio__content flexbox-center">
                                        <i class="fa fa-envelope-o fa-4x main-menu-link-icon"></i>
                                        CONTACT
                                    </a>
                                </div>
                            </div>
                            <div class="menu-container">
                                <div class="block-keep-ratio  block-keep-ratio-1-1  block-width-half  pull-left  about-main">
                                    <a href="#" class="main-menu-link contact block-keep-ratio__content flexbox-center">
                                        <i class="fa fa-picture-o fa-4x main-menu-link-icon"></i>
                                        GALLERY
                                    </a>
                                </div>

                                <div class="block-keep-ratio  block-keep-ratio-1-1  block-width-half  pull-right  contact-main">
                                    <a href="@Url.Action("AboutUs","Home")" class="main-menu-link contact block-keep-ratio__content flexbox-center">
                                        <i class="fa fa-tencent-weibo fa-4x main-menu-link-icon"></i>
                                        ABOUT US
                                    </a>
                                </div>
                            </div>
                        </div>
                    </aside>
                    @RenderBody()
                </div>
            </div> 
            <footer class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 footer">
                    <p class="copyright">Copyright © 2020 Warunk Stream | Design: template mo</p>
                </div>
            </footer>  <!-- .row -->
        </div>
    </div> <!-- .main-body -->
    <!-- JavaScript -->
    <script src="~/content/js/jquery-1.11.3.min.js"></script>
    <script src="~/content/js/bootstrap.min.js"></script>

</body>
</html>
